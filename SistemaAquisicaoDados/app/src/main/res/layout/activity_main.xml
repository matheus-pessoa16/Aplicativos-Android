<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:background="#d0dadd"
    android:paddingBottom="4dp"
    android:paddingEnd="4dp"
    android:paddingLeft="4dp"
    android:paddingStart="4dp"
    android:paddingTop="4dp"
    tools:context="sqlite.com.example.matheus.sistemaaquisicaodados.MainActivity">

    <TextView
        android:id="@+id/statusMessage"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="32dp"
        android:textColor="#000"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="511dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/motorBtn"
        android:layout_alignRight="@+id/motorBtn"
        android:layout_below="@+id/graph"
        android:layout_marginTop="109dp"
        android:text="SARD"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4" />

    <ImageView
        android:id="@+id/ntcBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/ldrBtn"
        android:layout_toLeftOf="@+id/ldrBtn"
        android:layout_toStartOf="@+id/ldrBtn"
        android:layout_weight="1"
        android:background="@drawable/ntcbtn" />

    <ImageView
        android:id="@+id/ldrBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="53dp"
        android:layout_toLeftOf="@+id/motorBtn"
        android:layout_toStartOf="@+id/motorBtn"
        android:layout_weight="1"
        android:background="@drawable/ldrbtn" />

    <ImageView
        android:id="@+id/motorBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/ldrBtn"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/statusMessage"
        android:layout_toStartOf="@+id/statusMessage"
        android:layout_weight="1"
        android:background="@drawable/motor" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="600dp" />

</RelativeLayout>
